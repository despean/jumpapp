# Production Environment Configuration
# Copy this file to .env.production and fill in your production values

# Application
NODE_ENV=production
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your-super-secure-secret-key-here

# Database
DATABASE_URL=postgresql://user:password@host:port/database

# Google OAuth (for Calendar integration)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Recall.ai (for meeting bots and transcripts)
RECALL_AI_API_KEY=your-recall-ai-api-key

# OpenAI (for AI content generation)
OPENAI_API_KEY=your-openai-api-key

# LinkedIn OAuth (optional - for social media posting)
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_REDIRECT_URI=https://your-domain.com/api/auth/oauth/linkedin/callback

# Facebook OAuth (optional - for social media posting)
FACEBOOK_CLIENT_ID=your-facebook-app-id
FACEBOOK_CLIENT_SECRET=your-facebook-app-secret
FACEBOOK_REDIRECT_URI=https://your-domain.com/api/auth/oauth/facebook/callback

# Logging
LOG_LEVEL=info

# Security (optional)
RECALL_WEBHOOK_SECRET=your-webhook-secret-if-using-webhooks

# Performance (optional)
# NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id
